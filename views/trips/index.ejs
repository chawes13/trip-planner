<% include ../partials/header %>

<div class="container">
    <h1>My Trips</h1>
    <div class="row">
        <% trips.forEach(function(trip){ %>    
            <div class="col-xs-12 col-md-6">
                <div class="list-group">
                    <a href="/trips/<%= trip._id %>" class="list-group-item show-tile">
                        <span class="pull-right"><i class="fa fa-chevron-right fa-2x see-details" aria-hidden="true"></i></span>
                        <h4 class="list-group-item-heading"><%= trip.name %></h4>
                        <p class="list-group-item-text"><%= trip.tripDates %></p>
                    </a>
                </div>
            </div>
         <% }); %>
    </div>
</div>

<% include ../partials/footer %>